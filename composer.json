{
    "name": "frictionlessdigital/php-styles",
    "description": "FLS shared PHP style rules for PHP-CS-Fixer",
    "type": "library",
    "require": {
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "FrictionlessDigital\\": "src/"
        },
        "files": [
            "./src/helpers.php"
        ]
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Cyrill Kalita",
            "email": "cyrill@frictionlesssolutions.com"
        }
    ],
